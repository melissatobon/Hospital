@model Hospital.Web.Models.VitalSign

@{
    ViewData["Title"] = "Add Vital Sign";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/Font-awesome/css/fontawesome.css"/>
    <link rel="stylesheet" href="~/lib/Font-Awesome/css/regular.min.css">
    <link rel="stylesheet" href="~/lib/Font-Awesome/css/solid.min.css">

</head>

<h2 class="h2">Agregar</h2>

<h4 class="h4">Signos vitales</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddVitalSign">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPatient" />

            <partial name="_VitalSign" />

            <div class="form-group"> 
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.IdPatient" class="btn btn-success">Back to List</a>
</div>
</form>
</div>

</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Historia clinica</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                          
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Time)
                            </th>
                               <th>
                                @Html.DisplayNameFor(model =>model.Fc)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Pas)
                            </th>
                               <th>
                                @Html.DisplayNameFor(model =>model.Pad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Fr)
                            </th>
                               <th>
                                @Html.DisplayNameFor(model =>model.Spo2)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Temperature)
                            </th>
                               <th>
                                @Html.DisplayNameFor(model =>model.Glucometry)
                            </th>
                            
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Time)
                                </td>
                                <td>
                                    @Html.DisplayFor(model=> model.Fc)
                                </td>
                                <td>
                                    @Html.DisplayFor(model=> model.Pas)
                                </td>
                                <td>
                                    @Html.DisplayFor(model=> model.Pad)
                                </td>
                                 <td>
                                    @Html.DisplayFor(model=> model.Fr)
                                </td>
                                <td>
                                    @Html.DisplayFor(model=> model.Spo2)
                                </td>
                                <td>
                                    @Html.DisplayFor(model=> model.Temperature)
                                </td>
                                <td>
                                    @Html.DisplayFor(model=> model.Glucometry)
                                </td>
                                
                                <td> 
                                    <a asp-action="EditVitalSign" asp-route-id="@Model.Id" class="btn btn-outline-warning"><i class="fas fa-edit"></i></a>
                                   
<button data-id="@Model.Id" class="btn btn-outline-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="fas fa-trash"></i></button>

                                </td>
                            </tr>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}


</html>